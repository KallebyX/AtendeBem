# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://neondb_owner:password@host-pooler.aws.neon.tech/neondb?sslmode=require

# JWT Secret (change in production - use 'openssl rand -base64 32')
JWT_SECRET=change-this-in-production-use-strong-random-key
JWT_ACCESS_TOKEN_EXPIRY=900 # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRY=2592000 # 30 days in seconds

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=atendebem-production
S3_CDN_URL=https://cdn.atendebem.com.br

# Encryption (PII Data) - Generate with 'openssl rand -hex 32'
ENCRYPTION_KEY=generate-32-byte-hex-key-with-openssl-rand-hex-32

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-api-key
SENDGRID_FROM_EMAIL=contato@atendebem.com.br
SENDGRID_FROM_NAME=AtendeBem

# Twilio (SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+5511999999999

# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE_ID=your-phone-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# VIDaaS (Assinatura Digital ICP-Brasil)
VIDAAS_CLIENT_ID=your-client-id
VIDAAS_CLIENT_SECRET=your-client-secret
VIDAAS_REDIRECT_URI=https://atendebem.com.br/api/signature/callback
VIDAAS_ENVIRONMENT=production # ou 'sandbox'

